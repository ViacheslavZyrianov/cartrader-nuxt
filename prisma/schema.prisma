generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model Car {
  id            Int       @id @default(autoincrement())
  name          String
  description   String
  numberOfSeats Int
  miles         Int
  price         Int
  image         String
  make          String
  features      String[]
  city          String
  model         String
  year          Int
  listerId      String
  messages      Message[]
}

model Message {
  id        Int    @id @default(autoincrement())
  name      String
  email     String
  phone     String
  message   String
  listingId Int
  listing   Car    @relation(fields: [listingId], references: [id])
}
